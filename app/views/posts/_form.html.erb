<% if flash[:loan_saved] %>
  <div class="alert alert-warning" style="border: 1px solid #ffc107; background-color: #fff3cd; color: #856404; padding: 16px; border-radius: 6px; margin-bottom: 16px; box-shadow: 0 2px 6px rgba(255,193,7,0.1);">
    <strong>Notice:</strong> <%= flash[:loan_saved] %>
  </div>
<% end %>

<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>
      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :borrower_name, "Borrower Name", style: "display: block" %>
    <%= form.text_field :borrower_name %>
  </div>
  <div>
    <%= form.label :amount, "Loan Amount", style: "display: block" %>
    <%= form.number_field :amount, step: 100 %>
  </div>
  <div>
    <%= form.label :interest_rate, "Interest Rate (%)", style: "display: block" %>
    <%= form.number_field :interest_rate, step: 0.01 %>
  </div>
  <div>
    <%= form.label :term_months, "Term (Months)", style: "display: block" %>
    <%= form.number_field :term_months %>
  </div>
  <div>
    <%= form.label :start_date, "Start Date", style: "display: block" %>
    <%= form.date_field :start_date %>
  </div>
  <div>
    <%= form.label :purpose, "Purpose", style: "display: block" %>
    <%= form.text_area :purpose %>
  </div>
<div>
  <%= form.label :status, "Status", style: "display: block" %>
  <%= form.select :status, options_for_select([["Pending", "Pending"], ["Approved", "Approved"], ["Rejected", "Rejected"]], selected: post.status || "Pending") %>
</div>
  <div>
    <%= form_with(model: @post) do |form| %>
  <!-- form fields here -->
  <%= form.submit "Save Loan", class: "btn btn-outline-success" %>
<% end %>
  </div>

  
<% end %>
 